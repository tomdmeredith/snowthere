# =============================================================================
# Snowthere Environment Variables
# =============================================================================
# Copy this file to .env.local for local development
# For production, set these in Vercel Environment Variables
# =============================================================================

# Site Configuration
# ------------------
# Used in sitemaps, robots.txt, llms.txt, and Open Graph
NEXT_PUBLIC_SITE_URL=https://snowthere.com

# Supabase
# --------
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# SECURITY: Service role key should ONLY be set in Vercel Environment Variables
# Never commit the actual key to version control
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key  # VERCEL ONLY

# Google Analytics
# ----------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ISR Revalidation
# ----------------
# Generate with: openssl rand -hex 32
# Used by agents to trigger page regeneration
REVALIDATE_SECRET=your-secret-here

# =============================================================================
# Agent APIs (for agents/ directory)
# =============================================================================

# Research APIs
EXA_API_KEY=
SERPAPI_API_KEY=
TAVILY_API_KEY=

# AI Model
ANTHROPIC_API_KEY=

# Optional: Image Generation (tiered)
GOOGLE_AI_API_KEY=        # Gemini (tier 1)
GLIF_API_KEY=             # Glif (tier 2)
REPLICATE_API_TOKEN=      # Replicate (tier 3)

# Optional: Vercel ISR Revalidation (for agents to trigger page rebuild)
VERCEL_DEPLOY_HOOK_URL=
